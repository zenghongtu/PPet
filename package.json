    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/redux-state-sync": "^3.1.2",
    "@types/styled-components": "^5.1.19",
    "@vitejs/plugin-react": "^1.1.4",
    "antd": "^4.16.13",
    "chalk": "^5.0.0",
    "electron": "16.0.6",
    "electron-builder": "^22.14.5",
    "electron-store": "^8.0.1",
    "electron-window-state": "^5.0.3",
