    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-persist": "^6.0.0",
    "redux-state-sync": "^3.1.2",
    "styled-components": "^5.3.3",
    "typescript": "^4.4.4",
    "vite": "^2.7.10",
    "vite-plugin-imp": "^2.1.3"
  },
